extends base.pug

block scripts
  script(src='/static/script.js')

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us

        form(action="/contact", method="post", class="myForm") 
        
            label Name:
            input(type="text", class="myInput", name="name", placeholder="Enter Your Name", required)
            label Date-Of-Birth:
            input(type="date", class="myInput", name="date", placeholder="Enter Your DOB", required)
            label Mobile Number:
            input(type="tel", class="myInput", name="mobile",maxlength="14",value="+91-",pattern="+91-[0-9]{9}", placeholder="Enter your Mobile Number", required)
            label Email:
            input(type="email", class="myInput", name="email", placeholder="Enter Your Email", required)
            label Address:
            input(type="text", class="myInput", name="address", placeholder="Enter Your Address", required)
            label Any Query: 
            input(type="text", class="myInput", name="desc", placeholder="Enter Your Concern")
            input(type="submit",id="btn", value="Submit")